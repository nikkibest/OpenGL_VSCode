{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/OpenGL-Core/src",
                "${workspaceFolder}/OpenGL-Core/vendor/spdlog/include",
                "${workspaceFolder}/OpenGL-Core/vendor/glm",
                "${workspaceFolder}/OpenGL-Core/vendor/Glad/include",
                "${workspaceFolder}/OpenGL-Core/vendor/imgui",
                "${workspaceFolder}/OpenGL-Core/vendor/stb_image",
                "/usr/include",
                "/usr/local/include"
            ],
            "defines": [
                "GLCORE_PLATFORM_LINUX",
                "GLCORE_DEBUG",
                "GLFW_INCLUDE_NONE"
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64",
            "configurationProvider": "ms-vscode.cmake-tools",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}
